import java.awt.*;
import java.awt.event.*;
import javax.swing.*;//Timer;

public class Compete {
	public static void main(String args[]) {
		TimeWin Win = new TimeWin();
	}
}

class TimeWin extends JFrame implements ActionListener {
	JPanel p1, p2;
	JTextField tuzi, wugui;
	JButton bStart, bStop, bContinue;
	Timer time1, time2;
	int n = 0, start = 1;

	TimeWin() {
		p1 = new JPanel();
		p2 = new JPanel();
		time1 = new Timer(200, this);
		time2 = new Timer(100, this);// TimeWin对象做计时器的监视器。
		tuzi = new JTextField(20);
		wugui = new JTextField(20);
		bStart = new JButton("开始");
		bStop = new JButton("暂停");
		bContinue = new JButton("继续");
		bStart.addActionListener(this);
		bStop.addActionListener(this);
		bContinue.addActionListener(this);
		this.add(p1, BorderLayout.NORTH);
		this.add(p2, BorderLayout.CENTER);
		p1.add(bStart);
		p1.add(bStop);
		p1.add(bContinue);
		p2.add(tuzi);
		p2.add(wugui);
		setSize(500, 500);
		validate();
		setVisible(true);
		addWindowListener(new WindowAdapter() {
			public void windowClosing(WindowEvent e) {
				System.exit(0);
			}
		});
	}

	public void actionPerformed(ActionEvent e) {
		if (e.getSource() == time1) {
			String str=new String("兔子");
			
			tuzi.setText("" + str);
			int x = tuzi.getBounds().x;
			int y = tuzi.getBounds().y;
			y = y + 2;
			tuzi.setLocation(x, y);
		} else if (e.getSource() == bStart) {
			time1.start();
		} else if (e.getSource() == bStop) {
			time1.stop();
		} else if (e.getSource() == bContinue) {
			time1.restart();
		}
	if (e.getSource() == time2) {
		String str=new String("乌龟");
		
		wugui.setText("" + str);
		int x = wugui.getBounds().x;
		int y = wugui.getBounds().y;
		y = y + 2;
		wugui.setLocation(x, y);
	} else if (e.getSource() == bStart) {
		time2.start();
	} else if (e.getSource() == bStop) {
		time2.stop();
	} else if (e.getSource() == bContinue) {
		time2.restart();
	}
}
}
